<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ScopedLab.App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="CustomerServiceLabel"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <Button Text="New Window" Clicked="Button_Clicked"/>
            <Button Text="Show Alert" Clicked="Button_Clicked_1"/>
            <Button Text="Show New Child Window" Clicked="Button_Clicked_2"/>

            <Label x:Name="WindowIdLabel"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
